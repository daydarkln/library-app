<div class="jumbotron text-center">
  <h1>{{model.headerMessage}}</h1>

  <br/><br/>

  <p>Don't miss our launch date, request an invitation now.</p>

  <div class="form-group form-group-lg clearfix">
    <div class="col-xs-12 col-sm-12 col-md-5 col-md-offset-2 has-feedback">
      <label class="control-label" for="inputSuccess2">Your email</label>
      {{input type="email" value=model.emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
      {{#if model.isValidEmail}}
        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
      {{/if}}
    </div>
    <div class="col-xs-12 col-sm-12 col-md-5 col-md-offset-2 has-feedback">
      <label class="control-label" for="inputSuccess2">Message</label>
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=model.message}}
      {{#if model.isMessageEnoughLong}}
        <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
      {{/if}}
    </div>
    <div class="col-xs-12 col-sm-offset-0 col-sm-4 col-md-3">
        <button class="btn btn-primary btn-lg btn-block" {{action 'saveInvitation'}} disabled={{model.isNotValid}}>Request invitation</button>
    </div>
  </div>

  {{#if model.responseMessage}}
    <div class="alert alert-success">{{model.responseMessage}}</div>
  {{/if}}

  <br/><br/>
</div>